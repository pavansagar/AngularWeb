@{
    PageData["title"] = "AngularJS SPA | Sign In";
}
<div class="row">
    <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="LoginUser(login.userName, login.password)">
        <h2 class="text-center">Sign In</h2>
        <h4>Hello....this follows the angular expression {{PageTitle}}</h4>
        <div class="form-box">
            <div class="form-group">
                <input ng-model="login.userName" type="text" class="form-control" placeholder="Username or Email" required autofocus />
            </div>
            <div class="form-group">
                <input ng-model="login.password" type="password" class="form-control" placeholder="Password" required />
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit" ng-disabled="!(login.userName && login.password)" disabled>LogIn</button>
            </div>

            {{login}}
            <br />
            {{login.userName}}
            <br />
            {{firstName}}
        </div>
    </form>
</div>